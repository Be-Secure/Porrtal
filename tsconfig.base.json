{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@porrtal-components/r-quick-start-demo": [
        "libs/porrtal-components/r/quick-start-demo/src/index.ts"
      ],
      "@porrtal/r-api": ["libs/porrtal/r/api/src/index.ts"],
      "@porrtal/r-shell": ["libs/porrtal/r/shell/src/index.ts"],
      "@porrtal/r-shell-blueprint": [
        "libs/porrtal/r/shell-blueprint/src/index.ts"
      ],
      "@porrtal/r-shell-material": [
        "libs/porrtal/r/shell-material/src/index.ts"
      ],
      "@porrtal/r-split": ["libs/porrtal/r/split/src/index.ts"],
      "@porrtal/r-user": ["libs/porrtal/r/user/src/index.ts"],
      "@test-comps/first-test-comp": [
        "libs/test-comps/first-test-comp/src/index.ts"
      ],
      "@test-comps/second-test-comp": [
        "libs/test-comps/second-test-comp/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
